<Page x:Class="RepairServiceProgram.Pages.Pages_Customer.PageCreateOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RepairServiceProgram.Pages.Pages_Customer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCreateOrder" Background="White">

    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<ScrollViewer>
			<StackPanel>
				<Label Name="Label_HelloLabel" Content="Создание заявки" FontSize="32" Padding="20" FontFamily="Arial Black"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="auto"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Grid.Column="0" Text="Описание проблемы" Padding="10" Margin="5"/>
					<TextBox Name="Textbox_DescriptionProblem" Grid.Column="1" Padding="10" Margin="5" Height="100" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
				</Grid>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="120"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Grid.Column="0" Text="Название техники" Padding="10" Margin="5"/>
					<TextBox Name="Textbox_TechTypeName" Grid.Column="1" Padding="10" Margin="5"/>
				</Grid>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="120"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Grid.Column="0" Text="Производитель" Padding="10" Margin="5"/>
					<TextBox Name="Textbox_Manufacturer" Grid.Column="1" Padding="10" Margin="5"/>
				</Grid>

				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="120"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Grid.Column="0" Text="Модель" Padding="10" Margin="5"/>
					<TextBox Name="Textbox_Model" Grid.Column="1" Padding="10" Margin="5"/>
				</Grid>

			</StackPanel>
		</ScrollViewer>
		
		
		<StackPanel Orientation="Horizontal" Grid.Row="1">
			<Button Content="Назад" Padding="10" Margin="10" Click="Return_Click"/>
			<Button Content="Создать заявку" Padding="10" Margin="10" Click="CreateOrder_Click"/>
		</StackPanel>
		
	</Grid>
</Page>
